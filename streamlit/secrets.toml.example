# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your actual values

# Google Gemini API Key (required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY = "your-gemini-api-key-here"

# SMTP Email Configuration (for email confirmations)
SMTP_USERNAME = "your-email@gmail.com"
SMTP_PASSWORD = "your-app-password"
EMAIL_FROM = "your-email@gmail.com"

# Optional: Custom SMTP settings
# SMTP_SERVER = "smtp.gmail.com"
# SMTP_PORT = 587

# Optional: Database path
# DB_PATH = "bookings.db"

# Optional: Vector store path
# VECTOR_STORE_PATH = "vector_store"

# Optional: Web search (enabled by default)
# WEB_SEARCH_ENABLED = "true"

